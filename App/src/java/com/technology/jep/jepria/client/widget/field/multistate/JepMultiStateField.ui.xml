  <g:DeckPanel addStyleNames="jepRia-MultiStateField">
    <g:FlowPanel ui:field="viewPanel" addStyleNames="jepRia-hPanelStyle jepRia-viewPanel">
      <g:HTML addStyleNames="jepRia-FontStyle jepRia-MultiStateField-Label" ui:field="viewCardLabel"></g:HTML>
       <g:HTML addStyleNames="jepRia-FontStyle" ui:field="viewCard"></g:HTML>
     </g:FlowPanel>
    <g:FlowPanel ui:field="editablePanel" addStyleNames="jepRia-hPanelStyle jepRia-editablePanel">
      <g:HTML addStyleNames="jepRia-FontStyle jepRia-MultiStateField-Label" ui:field="editableCardLabel"></g:HTML>
